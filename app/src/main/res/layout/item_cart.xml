<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    card_view:cardCornerRadius="14dp"
    card_view:cardElevation="2dp"
    card_view:cardBackgroundColor="#FAFAFA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Checkbox chọn sản phẩm -->
        <CheckBox
            android:id="@+id/checkboxSelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6dp"
            android:focusable="false"
            android:focusableInTouchMode="false" />

        <!-- Ảnh sản phẩm -->
        <ImageView
            android:id="@+id/imgProduct"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_image_placeholder"
            android:scaleType="centerCrop"
            android:background="@drawable/avatar_circle_bg"
            android:layout_marginEnd="12dp" />

        <!-- Thông tin sản phẩm -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvProductTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rrr"
                android:textStyle="bold"
                android:textColor="#1A237E"
                android:textSize="16sp"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/tvOfferPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/gi_1_000_000"
                android:textColor="#E53935"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_marginTop="3dp" />


        </LinearLayout>

        <!-- Nút xóa sản phẩm khỏi giỏ -->
        <ImageButton
            android:id="@+id/btnRemove"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_delete"
            android:contentDescription="@string/x_aa"
            android:backgroundTint="#D32F2F"
            android:layout_marginStart="8dp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
