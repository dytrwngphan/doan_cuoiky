<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/layoutMain"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <TextView
            android:text="@string/nh_s_n_ph_m"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvImages"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="6dp"
            android:orientation="horizontal" />

        <Button
            android:id="@+id/btnAddImage"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="@string/th_m_nh"
            android:backgroundTint="#00ACC1"
            android:textColor="@android:color/white"
            android:layout_gravity="start"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/t_n_s_n_ph_m" />

        <EditText
            android:id="@+id/edtTitle"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="@string/nh_p_t_n_s_n_ph_m"
            android:background="@drawable/bg_edittext"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:textSize="15sp"
            android:layout_marginBottom="6dp"/>

        <TextView
            android:text="@string/m_t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/edtDescription"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@drawable/bg_edittext"
            android:gravity="top"
            android:hint="@string/nh_p_m_t"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:textSize="15sp"
            android:layout_marginBottom="6dp"/>

        <TextView
            android:text="@string/gi_vn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/edtPrice"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="number"
            android:hint="@string/vd_1500000"
            android:background="@drawable/bg_edittext"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:textSize="15sp"
            android:layout_marginBottom="6dp"/>

        <TextView
            android:text="@string/t_nh_tr_ng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Spinner
            android:id="@+id/spinnerCondition"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bg_edittext"
            android:paddingStart="8dp"
            android:layout_marginBottom="6dp" />

        <TextView
            android:text="@string/v_tr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvLocation"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="@string/ch_n_v_tr_b_n"
            android:background="@drawable/bg_edittext"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:textSize="15sp"
            android:gravity="center_vertical"
            android:focusable="false"
            android:clickable="true"
            android:text=""
            android:layout_marginBottom="6dp"/>

        <TextView
            android:text="@string/danh_m_c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Spinner
            android:id="@+id/spinnerCategory"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bg_edittext"
            android:paddingStart="8dp"
            android:layout_marginBottom="6dp" />

        <TextView
            android:text="@string/tr_ng_th_i"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Spinner
            android:id="@+id/spinnerStatus"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bg_edittext"
            android:paddingStart="8dp"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="@string/th_m_s_n_ph_m"
            android:backgroundTint="#2196F3"
            android:textColor="@android:color/white"
            android:textStyle="bold"/>
        <Button
            android:id="@+id/btnCancle"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="@string/hu_th_m"
            android:backgroundTint="#E53935"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_marginTop="8dp"/>
    </LinearLayout>
</ScrollView>
